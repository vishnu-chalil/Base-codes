<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishnu.offline.MainActivity">


    <TextView
        android:id="@+id/textView_name"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_marks"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Surname" />


    <TextView
        android:id="@+id/textView_surname"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView_name"
        android:layout_alignStart="@+id/textView_name"
        android:layout_below="@+id/textView_name"
        android:layout_marginTop="27dp"
        android:text="Marks" />

    <TextView
        android:id="@+id/textView_marks"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView_name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_name"
        android:text="Name" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView_marks"
        android:layout_toRightOf="@+id/textView_marks"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_name"
        android:layout_toEndOf="@+id/textView_name"
        android:layout_toRightOf="@+id/textView_name"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_surname"
        android:layout_toEndOf="@+id/textView_surname"
        android:layout_toRightOf="@+id/textView_surname"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_surname"
        android:layout_alignStart="@+id/textView_surname"
        android:layout_below="@+id/textView_surname"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="79dp"
        android:text="Insert" />

    <Button
        android:id="@+id/button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_insert"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/textView_surname"
        android:layout_toRightOf="@+id/textView_surname"
        android:text="View" />
</RelativeLayout>
